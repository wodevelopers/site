-- Table: sft_site.venda

-- DROP TABLE sft_site.venda;

CREATE TABLE sft_site.venda
(
  id_venda bigserial NOT NULL,
  "VendedorEmail" text,
  "TransacaoID" text,
  "Referencia" text,
  "Extras" text,
  "TipoFrete" text,
  "ValorFrete" text,
  "Anotacao" text,
  "DataTransacao" text,
  "TipoPagamento" text,
  "StatusTransacao" text,
  "CliNome" text,
  "CliEmail" text,
  "CliEndereco" text,
  "CliNumero" text,
  "CliComplemento" text,
  "CliBairro" text,
  "CliCidade" text,
  "CliEstado" text,
  "CliCEP" text,
  "CliTelefone" text,
  "ProdID_x" text,
  "ProdDescricao_x" text,
  "ProdValor_x" text,
  "ProdQuantidade_x" text,
  "ProdFrete_x" text,
  "NumItens" text
)
WITH (
  OIDS=FALSE
);
ALTER TABLE sft_site.venda
  OWNER TO cuca_site_teste;



<?php

